<% provide(:tltle, "Liste messages")%>
<h1 class="titre1">Listes messages</h1>

<ul class="posts">
  <% @posts.each do |post| %>
    <li>
      <%= gravatar_for current_user %>
      <div class="ligne3">
	      <div>
	      	<b><%= link_to current_user.full_name, current_user %></b>
	      	<%= link_to show_username, current_user %>
	      </div>
	      <div>
	      	 <%= link_to 'Modifier', edit_post_path(post) %>  |
	    	 <%= link_to 'Supprimer', post, confirm: 'Confirmer?', method: :delete %>
	      </div>
	      <div>post√© le <%= post.time_count %></div>
	  </div>
      <%= h post.view_post %>
    </li>

  <% end %>
</ul>

<div align="center" style="margin-top: 40px;">
	<%= link_to 'Nouveau message', new_post_path, :class => "btn btn-large btn-primary" %>
</div>

